                        android:layout_height="wrap_content"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="#0014ED"
                        android:backgroundTintMode="multiply"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/none" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/p2end2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:outlineAmbientShadowColor="#00FFFFFF"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/p2end2score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="#0014ED"
                        android:backgroundTintMode="multiply"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/none" />

                    <Button
                        android:id="@+id/p2end2score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="#0014ED"
                        android:backgroundTintMode="multiply"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/none" />

                    <Button
                        android:id="@+id/p2end2score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="#0014ED"
                        android:backgroundTintMode="multiply"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/none" />

                    <TextView
                        android:id="@+id/p2equals2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/eq"
                        android:textColor="#FFEB3B"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/p2end2score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="#0014ED"
                        android:backgroundTintMode="multiply"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/none" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/p2end3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:outlineAmbientShadowColor="#00FFFFFF"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/p2end3score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="#0014ED"
                        android:backgroundTintMode="multiply"
                        android:maxWidth="45dp"
