<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:outlineAmbientShadowColor="#00FFFFFF"
    tools:context=".fragments.SecondRoundScoreInput">

    <androidx.cardview.widget.CardView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:outlineProvider="none"
        android:visibility="visible"
        app:cardBackgroundColor="@color/Background"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:backgroundTintMode="add"
            android:orientation="vertical"
            android:outlineAmbientShadowColor="#00FFFFFF">

            <androidx.cardview.widget.CardView
                android:id="@+id/p1end1Cont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineProvider="none"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Background"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:outlineAmbientShadowColor="#00FFFFFF"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/p1end1score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />

                    <Button
                        android:id="@+id/p1end1score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />

                    <Button
                        android:id="@+id/p1end1score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />

                    <TextView
                        android:id="@+id/equals1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/eq"
                        android:textColor="#FFEB3B"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/p1end1score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/p1end1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:outlineProvider="none"
                    android:visibility="visible"
                    app:cardBackgroundColor="#00FFFFFF" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/p1end2Cont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineProvider="none"
                app:cardBackgroundColor="@color/Background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:outlineAmbientShadowColor="#00FFFFFF"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/p1end2score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />

                    <Button
                        android:id="@+id/p1end2score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />

                    <Button
                        android:id="@+id/p1end2score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />

                    <TextView
                        android:id="@+id/equals2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/eq"
                        android:textColor="#FFEB3B"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/p1end2score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Red"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Red" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/p1end2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:outlineProvider="none"
                    app:cardBackgroundColor="@android:color/transparent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/divider"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/divider"
        app:layout_constraintBottom_toTopOf="@+id/player2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:backgroundTintMode="add"
            android:orientation="vertical"
            android:outlineProvider="none">

            <androidx.cardview.widget.CardView
                android:id="@+id/p2end1Cont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="#00FFFFFF"
                android:outlineProvider="none"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:outlineProvider="none"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/p2end1score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />

                    <Button
                        android:id="@+id/p2end1score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />

                    <Button
                        android:id="@+id/p2end1score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />

                    <TextView
                        android:id="@+id/p2equals1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/eq"
                        android:textColor="#FFEB3B"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/p2end1score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/p2end1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:outlineProvider="none"
                    app:cardBackgroundColor="@android:color/transparent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/p2end2Cont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="#00FFFFFF"
                android:outlineProvider="none"
                app:cardBackgroundColor="#00FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:outlineProvider="none"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/p2end2score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />

                    <Button
                        android:id="@+id/p2end2score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />

                    <Button
                        android:id="@+id/p2end2score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />

                    <TextView
                        android:id="@+id/p2equals2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:outlineAmbientShadowColor="#00FFFFFF"
                        android:text="@string/eq"
                        android:textColor="#FFEB3B"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/p2end2score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/scorebutton"
                        android:backgroundTint="@color/Blue"
                        android:backgroundTintMode="multiply"
                        android:clickable="false"
                        android:maxWidth="45dp"
                        android:minWidth="45dp"
                        android:outlineProvider="none"
                        android:text="@string/none"
                        android:textColor="@color/Blue" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/p2end2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:outlineProvider="none"
                    app:cardBackgroundColor="@android:color/transparent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/player1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:text="@string/player1"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/player2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:text="@string/player2"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintGuide_percent="0.50121653" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>