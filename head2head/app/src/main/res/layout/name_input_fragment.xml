<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context="fragments.NameInputFragment" >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:outlineProvider="none">

            <EditText
                android:id="@+id/player1NameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/playerName1Hint"
                android:backgroundTint="@color/Red"
                android:ems="10"
                android:hint="@string/playerName1Hint"
                android:inputType="textPersonName"
                android:outlineProvider="none"
                android:textColor="@color/Gold"
                android:textColorHint="#CDDC39" />

            <EditText
                android:id="@+id/player2NameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/playerName2Hint"
                android:backgroundTint="@color/Blue"
                android:ems="10"
                android:hint="@string/playerName2Hint"
                android:inputType="textPersonName"
                android:outlineProvider="none"
                android:textColor="@color/Gold"
                android:textColorHint="#CDDC39" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/scorebutton"
                android:backgroundTint="@color/Gold"
                android:outlineProvider="none"
                android:text="@android:string/ok"
                android:textColor="@color/Gold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>